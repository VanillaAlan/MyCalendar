<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/sp_reminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_btn_select_selector"
        android:dropDownSelector="@drawable/bg_item_selector"
        android:entries="@array/reminder"
        android:spinnerMode="dropdown"
        android:textColor="@color/c1"
        android:textSize="@dimen/t3" />

    <ImageButton
        android:id="@+id/ib_delete_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_item_selector"
        android:src="@drawable/ic_remove_field" />

</LinearLayout>
